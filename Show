        </div>

        <div class="content-wrapper">
            <?php
            include 'DBconnect.php';
            
            // Check if database connection is successful
            if (!$conn) {
                die("Connection failed: " . mysqli_connect_error());
            }
            
            // Get total count for statistics
            $totalCount = mysqli_num_rows(mysqli_query($conn, "SELECT * FROM clinic"));
            $uniqueCities = mysqli_num_rows(mysqli_query($conn, "SELECT DISTINCT city FROM clinic"));
            $uniqueTowns = mysqli_num_rows(mysqli_query($conn, "SELECT DISTINCT town FROM clinic"));
            
            // Query to get all clinics
            $query = "SELECT * FROM clinic ORDER BY name";
            $result = mysqli_query($conn, $query);
            ?>

            <div class="clinics-card">
                <div class="card-header">
                    <h1><i class="fas fa-clinic-medical"></i> Medical Facilities</h1>
                    <p>Complete list of registered clinics in the healthcare system</p>
                </div>
                
                <div class="card-body">
                    <div class="clinics-table-container">
                        <?php if (mysqli_num_rows($result) > 0): ?>
                            <!-- Statistics Summary -->
                            <div class="stats-summary">
                                <div class="stat-item">
                                    <div class="stat-value"><?php echo $totalCount; ?></div>
                                    <div class="stat-label">Total Clinics</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value"><?php echo $uniqueCities; ?></div>
                                    <div class="stat-label">Cities Covered</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value"><?php echo $uniqueTowns; ?></div>
                                    <div class="stat-label">Areas Served</div>
                                </div>
                            </div>
                            
                            <table class="clinics-table">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-id-card"></i> Clinic ID</th>
                                        <th><i class="fas fa-hospital"></i> Clinic Details</th>
                                        <th><i class="fas fa-map-marker-alt"></i> Location</th>
                                        <th><i class="fas fa-phone"></i> Contact</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <?php while ($row = mysqli_fetch_assoc($result)): ?>
                                        <tr>
                                            <td>
                                                <strong style="color: var(--success-green);"><?php echo htmlspecialchars($row['CID']); ?></strong>
                                            </td>
                                            <td>
                                                <div class="clinic-name">
                                                    <?php echo htmlspecialchars($row['name']); ?>
                                                </div>
                                                <div class="clinic-address">
                                                    <?php echo htmlspecialchars($row['address']); ?>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="location-badge">
                                                    <i class="fas fa-city"></i>
                                                    <?php echo htmlspecialchars($row['town']); ?>, <?php echo htmlspecialchars($row['city']); ?>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="contact-info">
                                                    <a href="tel:<?php echo htmlspecialchars($row['contact']); ?>" class="contact-link">
                                                        <i class="fas fa-phone"></i>
                                                        <?php echo htmlspecialchars($row['contact']); ?>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    <?php endwhile; ?>
                                </tbody>
                            </table>
                        <?php else: ?>
                            <div class="no-data">
                                <i class="fas fa-hospital"></i>
                                <h3>No Clinics Found</h3>
                                <p>No clinics have been registered in the system yet.</p>
                            </div>
                        <?php endif; ?>
                    </div>
                </div>
                
                <div class="card-footer">
                    <a href="AdminPage.php" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Back to Admin Panel
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Table row click animation
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('.clinics-table tr');
            tableRows.forEach((row, index) => {
                if (index === 0) return; // Skip header row
                
                row.style.opacity = '0';
                row.style.transform = 'translateX(-20px)';
                row.style.transition = 'all 0.3s ease';
                
                setTimeout(() => {
                    row.style.opacity = '1';
                    row.style.transform = 'translateX(0)';
                }, index * 100);
            });
        });
        
        // Add hover effect for better interaction
        document.querySelectorAll('.clinics-table tr').forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.01)';
                this.style.boxShadow = '0 4px 6px -1px rgba(0, 0, 0, 0.1)';
            });
            
            row.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
                this.style.boxShadow = 'none';
            });
        });
    </script>
